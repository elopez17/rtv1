#include <rtv1.h>

void	putplane(t_rtv1 *rt, t_dim size, int color)
{
	t_vert	plane[4];

	plane[0] = (t_vert){200, 100, 0};
	plane[1] = (t_vert){200 + size.width, 100, 0};
	plane[2] = (t_vert){200, 100 + size.height, 0};
	plane[3] = (t_vert){200 + size.width, 100 + size.height, 0};
	drawline(rt, &plane[0], &plane[1], color);
	drawline(rt, &plane[1], &plane[3], color);
	drawline(rt, &plane[0], &plane[2], color);
	drawline(rt, &plane[2], &plane[3], color);
}
